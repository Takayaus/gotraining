<div class="container">
<h1>投稿一覧</h1>

<%= search_form_for @q do |f| %>
    <%= f.label :ジム名 %>
    <%= f.collection_select :gym_name_cont, Gym.all, :name, :name, {include_blank: '選択してください'}%>
    <%= f.button :search %>
  <% end %>

<% @posts.each do |post| %>
  <div class="media">
  <svg class="bd-placeholder-img mr-3" width="64" height="64" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 64x64"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">64x64</text></svg>
  <div class="media-body">

    <%= gravatar_for post.user %>
    <span><%= link_to post.user.name, post.user %></span>
    <span><%= link_to post.title, post_path(post)%></span>
    <span>At <%= post.gym.name %></span>
    (<%= post.liked_users.count %>)
    <% if current_user?(post.user) %>
    <%= link_to "削除", post, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
    <% end %>

    </div>
    </div>
    </div>